<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:gravity="center"
    android:background="@mipmap/dialog_loading_bg">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/recorder_dialog_iv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/recorder"
            android:visibility="visible"/>
        <ImageView
            android:id="@+id/recorder_dialog_iv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/v1"
            android:visibility="visible"/>
    </LinearLayout>

    <TextView
        android:id="@+id/recorder_dialog_tx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/tx_dialog"
        android:textColor="#FFFFFF"/>
</LinearLayout>